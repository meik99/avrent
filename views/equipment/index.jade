extends ../layout

block content
    div.mdl-grid
        div.mdl-cell.mdl-cell--12-col
            h4= "Gerät hinzufügen"
        div.mdl-cell.mdl-cell--2-col
            div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                input#equipmentId.mdl-textfield__input(type="text")
                label.mdl-textfield__label(for="equipmentId")= "Geräte ID"
        div.mdl-cell.mdl-cell--1-col
            button.mdl-button.mdl-js-button.mdl-button--accent.mdl-button--raised= "Hinzufügen"
        div.mdl-cell.mdl-cell--9-col.mdl-layout--large-screen-only
            table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
                thead
                    tr
                        th= "Gerätename"
                tbody
                    each item in equipment
                        tr
                            td= item.id
                            if(item.borrowed.date_from <= -1)
                                td
                                    button.mdl-button.mdl-js-button.mdl-button--accent= "Löschen"
